<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentFour">


    <ImageView
        android:id="@+id/imageViewFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/img4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_nihao"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_30"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFour"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFour"
        app:layout_constraintStart_toStartOf="@+id/imageViewFour"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
